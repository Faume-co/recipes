{
    "manifests": {
        "faume/hybris": {
            "manifest": {
                "bundles": {
                    "Faume\\Hybris\\FaumeHybrisBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "composer-scripts": {
                    "cache:clear": "symfony-cmd"
                },
                "env": {
                    "HYBRIS_HOST": "changeMe",
                    "HYBRIS_TOKEN": "changeMe"
                },
                "post-install-output": [
                    "  * You are almost ready:",
                    "    -> Set values in your .env file for all FAUME_HYBRIS variables",
                    "    -> If you want, configure the \"hybris\" log channel"
                ]
            },
            "files": {
                "config/packages/faume_hybris.yaml": {
                    "contents": [
                        "faume_hybris:",
                        "  voucher:",
                        "    host: '%env(HYBRIS_VOUCHER_HOST)%'",
                        "    security_token: '%env(HYBRIS_VOUCHER_SECURITY_TOKEN)%'",
                        "    voucher_id_structure: '%env(HYBRIS_VOUCHER_ID_STRUCTURE)%'",
                        "  customer:",
                        "    host: '%env(HYBRIS_CUSTOMER_HOST)%'",
                        "    security_token: '%env(HYBRIS_CUSTOMER_SECURITY_TOKEN)%'"
                    ],
                    "executable": false
                }
            },
            "ref": "4a8c1baaa8b6de96b3d7335619115f63b9c69d53"
        }
    }
}
