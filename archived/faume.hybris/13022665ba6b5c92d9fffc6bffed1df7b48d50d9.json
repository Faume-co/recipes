{
    "manifests": {
        "faume/hybris": {
            "manifest": {
                "bundles": {
                    "Faume\\Hybris\\FaumeHybrisBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "composer-scripts": {
                    "cache:clear": "symfony-cmd"
                },
                "env": {
                    "HYBRIS_HOST": "changeMe",
                    "HYBRIS_SECURITY_TOKEN": "changeMe"
                },
                "post-install-output": [
                    "  * You are almost ready:",
                    "    -> Set values in your .env file for all FAUME_HYBRIS variables"
                ]
            },
            "files": {
                "config/packages/faume_hybris.yaml": {
                    "contents": [
                        "faume_hybris:",
                        "  host: '%env(HYBRIS_HOST)%'",
                        "  security_token: '%env(HYBRIS_TOKEN)%'"
                    ],
                    "executable": false
                },
                "config/packages/monolog.yaml": {
                    "contents": [
                        "monolog:",
                        "    channels:",
                        "      - hybris",
                        "    handlers:",
                        "        hybris_handler:",
                        "            type: rotating_file",
                        "            channels: [\"hybris\"]",
                        "            max_files: 30",
                        "when@dev:",
                        "    handlers:",
                        "        hybris:",
                        "            level: debug",
                        "            path: \"%kernel.logs_dir%/hybris.log\"",
                        "when@prod:",
                        "    handlers:",
                        "        hybris:",
                        "            path: \"%kernel.project_dir%/var/fsbucket/logs/hybris/hybris.log\"",
                        "            level: info"
                    ],
                    "executable": false
                }
            },
            "ref": "13022665ba6b5c92d9fffc6bffed1df7b48d50d9"
        }
    }
}
