{
    "manifests": {
        "faume/open-bravo": {
            "manifest": {
                "bundles": {
                    "Faume\\OpenBravo\\FaumeOpenBravoBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "composer-scripts": {
                    "cache:clear": "symfony-cmd"
                },
                "env": {
                    "FAUME_OPEN_BRAVO_HOST": "",
                    "FAUME_OPEN_BRAVO_CLIENT_ID": "",
                    "FAUME_OPEN_BRAVO_CLIENT_SECRET": ""
                }
            },
            "files": {
                "config/packages/faume_open_bravo.yaml": {
                    "contents": [
                        "faume_open_bravo:",
                        "  host: \"%env(FAUME_OPEN_BRAVO_HOST)%\"",
                        "  clientId: \"%env(FAUME_OPEN_BRAVO_CLIENT_ID)%\"",
                        "  clientSecret: \"%env(FAUME_OPEN_BRAVO_CLIENT_SECRET)%\""
                    ],
                    "executable": false
                },
                "config/packages/monolog.yaml": {
                    "contents": [
                        "monolog:",
                        "  channels:",
                        "    - open_bravo",
                        "  handlers:",
                        "    open_bravo:",
                        "      level: debug",
                        "      path: \"%kernel.logs_dir%/open_bravo.log\"",
                        "      type: rotating_file",
                        "      channels: [ \"open_bravo\" ]"
                    ],
                    "executable": false
                }
            },
            "ref": "b5b4d0cdf0fe081019dec57cfd814e9df33b9e0e"
        }
    }
}
